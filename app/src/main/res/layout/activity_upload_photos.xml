<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report.UploadPhotos"
    android:background="@color/background_for_app">
    <EditText
        android:id="@+id/titleImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bee"
        android:textColor="@color/background_for_app"
        android:hint="ENTER TITLE"
        android:textColorHint="@color/Cerulian"
        android:padding="12dp"
        android:textSize="20dp"
        android:layout_margin="7dp"
        android:inputType="textPersonName|textCapSentences"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/imageView"
        android:layout_below="@id/titleImage"
        android:src="@drawable/ic_uploaded_image"
        android:layout_margin="7dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/btnUploadPickedImage"
        android:layout_below="@id/imageView"
        android:layout_margin="7dp"
        android:backgroundTint="@color/color_bee"
        android:textColor="@color/background_for_app"
        android:text="UPLOAD IMAGE"
        android:textSize="25dp"
        android:layout_centerInParent="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pickImageFab"
        android:src="@drawable/ic_baseline_image_search_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>