<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_for_app"
    android:padding="0dp"
    android:paddingLeft="7dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    tools:context=".fragment_helpline">


    <TextView
        android:id="@+id/title_helpline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELPLINE NUMBERS"
        android:textColor="@color/heading_title"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <Button
        android:id="@+id/btnNationalHelpCall"
        android:layout_width="305dp"
        android:layout_height="90dp"
        android:layout_marginBottom="564dp"
        android:backgroundTint="@color/heading_title"
        android:gravity="center_horizontal"
        android:text="NATIONAL HELPLINE NUMBER"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_helpline"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPoliceCall"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginBottom="496dp"
        android:backgroundTint="@color/heading_title"
        android:gravity="center_horizontal"
        android:text="POLICE"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNationalHelpCall"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnAmbulanceCall"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginBottom="412dp"
        android:backgroundTint="@color/heading_title"
        android:gravity="center_horizontal"
        android:text="AMBULANCE"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPoliceCall"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnFireCall"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginBottom="324dp"
        android:backgroundTint="@color/heading_title"
        android:gravity="center_horizontal"
        android:text="FIRE"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAmbulanceCall"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnWomensCall"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginBottom="240dp"
        android:backgroundTint="@color/heading_title"
        android:gravity="center_horizontal"
        android:text="WOMEN'S HELPLINE"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFireCall"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnSeniorCtzCall"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="@color/heading_title"
        android:gravity="center_horizontal"
        android:text="SENIOR CITIZEN"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWomensCall"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/btnDisasterCall"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/heading_title"
        android:gravity="center_horizontal"
        android:text="DISASTER HEPLINE"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSeniorCtzCall"
        app:layout_constraintVertical_bias="0.321" />

</androidx.constraintlayout.widget.ConstraintLayout>