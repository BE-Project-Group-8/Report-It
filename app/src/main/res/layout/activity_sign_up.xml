<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    tools:context=".Registrations.SignUp">

    <EditText
        android:id="@+id/etSignUpName"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext_box"
        android:hint="Name"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/color_bee"
        android:textColorHint="@color/color_bee"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />

    <EditText
        android:id="@+id/etSignUpEmail"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext_box"
        android:ems="10"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/color_bee"
        android:textColorHint="@color/color_bee"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpName"
        app:layout_constraintVertical_bias="0.044" />

    <EditText
        android:id="@+id/etSignUpPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext_box"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/color_bee"
        android:textColorHint="@color/color_bee"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpAadharNum"
        app:layout_constraintVertical_bias="0.066" />

    <EditText
        android:id="@+id/etSignUpConfirmPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext_box"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/color_bee"
        android:textColorHint="@color/color_bee"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpPassword"
        app:layout_constraintVertical_bias="0.082" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/custom_button_color"
        android:text="REGISTER"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpConfirmPassword"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:id="@+id/btnHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/background_for_app"
        android:text=" I AM ALREADY A MEMBER! "
        android:textColor="@color/color_bee"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        app:layout_constraintVertical_bias="0.138" />

    <ImageView
        android:id="@+id/imgSignUpTitle"
        android:layout_width="232dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/title" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="93dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986"
        app:srcCompat="@drawable/app_logo" />

    <EditText
        android:id="@+id/etSignUpAadharNum"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Enter Aadhaar Number"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/color_bee"
        android:textColorHint="@color/color_bee"
        android:textSize="22sp"
        android:background="@drawable/custom_edittext_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSignUpEmail"
        app:layout_constraintVertical_bias="0.058" />


</androidx.constraintlayout.widget.ConstraintLayout>