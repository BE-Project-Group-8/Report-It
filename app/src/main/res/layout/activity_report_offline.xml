<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report.ReportOffline"
    android:background="@color/background_for_app">


    <TextView
        android:id="@+id/tvReportCrimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPORT CRIME"
        android:textColor="@color/color_bee"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <DatePicker
        android:id="@+id/etDateOfCrime"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:padding="7dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/etTimeOfCrime"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="time"
        android:textColor="@color/color_bee"
        android:textSize="25sp"
        android:textColorHint="@color/color_bee"
        android:hint="Enter Time Of Crime"
        android:padding="7dp"
        android:background="@drawable/custom_edittext_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_edittext_box"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="number"
        android:padding="7dp"
        android:textColor="@color/color_bee"
        android:textColorHint="@color/color_bee"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_edittext_box"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:padding="7dp"
        android:textColor="@color/color_bee"
        android:textColorHint="@color/color_bee"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257" />

    <EditText
        android:id="@+id/etNameOfVictim"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        android:textColorHint="@color/color_bee"
        android:background="@drawable/custom_edittext_box"
        android:textColor="@color/color_bee"
        android:textSize="25sp"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/btnShowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774" />


</androidx.constraintlayout.widget.ConstraintLayout>