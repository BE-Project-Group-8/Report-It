<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report.multipleFileUpload"
    android:background="@color/background_for_app">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="UPLOAD MULTIPLE FILES"
        android:textColor="@color/color_bee"
        android:textSize="35sp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:id="@+id/uploadmultipletitle"/>

    <Button
        android:id="@+id/btnChooseFiles"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/uploadmultipletitle"
        android:layout_centerVertical="true"
        android:layout_marginTop="320dp"
        android:backgroundTint="@color/color_bee"
        android:text="CHOOSE FILES"
        android:layout_centerInParent="true"
        android:textColor="@color/background_for_app"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btnUploadFiles"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChooseFiles"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/color_bee"
        android:text="UPLOAD FILES"
        android:layout_centerInParent="true"
        android:textColor="@color/background_for_app"
        android:textSize="25sp" />


</RelativeLayout>